*{margin:0;padding:0;box-sizing:border-box}body{height:100vh;position:relative;background:linear-gradient(to right,#0a0a0a,#240A6D);font-family:montserrat,sans-serif;color:#f5f5f5;overflow-x:hidden}body::-webkit-scrollbar{width:.5rem}body::-webkit-scrollbar-track{background:#0a0a0a}body::-webkit-scrollbar-thumb{background:#240a6d}.navbar{position:fixed;background:linear-gradient(to right,black 0% 40%,rgba(36,10,109,0));transition:width 600ms ease;font-family:roboto mono,monospace;top:0;width:15rem;height:100vh}.navbar-na{list-style:none;padding:3rem 0;margin:0;display:flex;flex-direction:column;align-items:center;height:100%}.nav-item{text-align:center;width:25%}.nav-item:first-child{margin-bottom:14rem}.nav-link{display:flex;align-items:center;height:5rem;color:#f5f5f5;text-decoration:none;transition:600ms}.nav-link:hover{filter:grayscale(0%)opacity(1);color:#ffb800}.logo span{font-weight:700}.burger{display:none;position:absolute;cursor:pointer;top:1rem;right:1rem}.burger div{width:30px;height:5px;background-color:#f5f5f5;margin:5px}@media screen and (max-width:768px){.burger{display:block;z-index:3}.navbar{background:linear-gradient(to left,black 0% 70%,rgba(36,10,109,0));position:fixed;right:0;height:100%;width:50%;display:flex;flex-direction:column;align-items:center;transform:translateX(100%);transition:transform .3s ease-in;z-index:2}.nav-link{opacity:0}.navbar-na{margin:50vh 0}.logo{display:none}}.nav-active{transform:translateX(0%)}@keyframes navLinkFade{from{opacity:0;transform:translateX(200px)}to{opacity:1;transform:translateX(0px)}}.main{position:absolute;height:92vh;margin-left:20rem;padding:4rem 0}.content{width:100%;height:100%;display:flex;flex-direction:column;justify-content:center}.angular{font-family:alex brush,cursive;font-size:1.2rem;color:#616161}.html{position:absolute;top:2rem}.body{position:absolute;top:4rem;margin-left:1rem}.h1{margin-left:1rem}.p{margin-left:1rem}.hello-friend{margin-left:3rem;font-size:5rem}.description{font-size:1.5rem;color:#616161;margin-left:3rem}@media screen and (max-width:768px){.main{margin:4rem 1rem}.angular{font-size:1rem}.hello-friend{font-size:3.5rem}.description{font-size:1rem}}@media screen and (max-width:550px){.main{margin:2rem 1rem}.hello-friend{font-size:2rem}.description{font-size:.7rem}}