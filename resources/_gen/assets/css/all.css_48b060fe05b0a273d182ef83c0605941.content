*{margin:0;padding:0;box-sizing:border-box}body{height:100vh;position:relative;background-color:#0a0a0a;font-family:montserrat,sans-serif;color:#fff}.grid-container{display:grid;width:100%;height:100vh;grid-template-areas:"left content right";grid-template-columns:.5fr 6fr .5fr}.left-bar{grid-area:left;background-color:#000}.right-bar{grid-area:right}.content{grid-area:content;display:grid;width:100%;height:100%;grid-template-areas:"border-left center center center center border-right";grid-template-columns:repeat(auto,6)}.content-columns{flex:1 1 0%;height:100%;border-right:1px solid var(--secondary)}.footer{position:absolute;bottom:0}nav{min-height:5vh;background-size:cover;padding:0;display:flex}.nav-links{display:flex;list-style:none}.nav-links li{padding-left:10rem;font-size:1.2rem}.nav-links a{text-decoration:none;color:#000}.nav-container{display:grid;width:100%;height:8vh;grid-template-areas:"left content right";grid-template-columns:.5fr 6fr .5fr}.nav-border-left{grid-area:left;background-color:#000}.nav-border-right{grid-area:right}.nav-content{grid-area:content;display:grid;width:100%;height:100%;grid-template-areas:"border-left center center center center border-right";grid-template-columns:repeat(auto,6)}.nav-column{flex:1 1 0%;height:100%;display:flex;justify-content:left;align-items:center;padding-left:10px;border-right:1px solid rgba(40,40,40,.99);cursor:pointer}.nav-column a{position:absolute;text-decoration:none;color:var(--main-text);font-size:1em;letter-spacing:.1rem;font-weight:700}