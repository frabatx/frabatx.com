*{margin:0;padding:0;box-sizing:border-box}body{height:100vh;position:relative;background:linear-gradient(to right,#0a0a0a,#240A6D);font-family:montserrat,sans-serif;color:#f5f5f5}body::-webkit-scrollbar{width:.5rem}body::-webkit-scrollbar-track{background:#0a0a0a}body::-webkit-scrollbar-thumb{background:#240a6d}.navbar{position:fixed;background:-webkit-linear-gradient(to right,black,rgba(36,10,109,0));transition:width 600ms ease;font-family:roboto mono,monospace;top:0;width:20rem;height:100vh}.navbar-na{list-style:none;padding:3rem 0;margin:0;display:flex;flex-direction:column;align-items:center;height:100%}.nav-item{text-align:center;width:25%}.nav-item:first-child{margin-bottom:10rem}.nav-link{display:flex;align-items:center;height:5rem;color:#f5f5f5;text-decoration:none;transition:600ms}.nav-link:hover{filter:grayscale(0%)opacity(1);color:#c000c3}.main{margin-left:20rem;padding:1rem}