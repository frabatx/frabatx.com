*{margin:0;padding:0;box-sizing:border-box}body{min-height:100vh;position:relative;font-family:montserrat,sans-serif;color:#f5f5f5;overflow:hidden;background-image:linear-gradient(to right,#09000f 0 5%,rgba(255,255,255,0) 20% 100%),url("/images/auroraoriginal.jpg");background-repeat:no-repeat;background-size:cover;backdrop-filter:blur(50px)}body::-webkit-scrollbar{width:.5rem}body::-webkit-scrollbar-track{background:#0a0a0a}body::-webkit-scrollbar-thumb{background:#682ae9}.navbar{position:fixed;transition:width 600ms ease;font-family:roboto mono,monospace;top:0;width:15rem;height:100vh}.navbar-na{list-style:none;padding:3rem;margin:0;display:flex;flex-direction:column;align-items:left;height:100%}.nav-item{text-align:center;width:25%}.nav-item:first-child{margin-bottom:14rem}.nav-link{display:flex;align-items:center;height:5rem;color:#f5f5f5;text-decoration:none;transition:600ms}.nav-link:hover{filter:grayscale(0%)opacity(1);color:#ffb800}.logo span{font-weight:700}.burger{display:none;position:absolute;cursor:pointer;top:1rem;right:1rem}.burger div{width:30px;height:5px;background-color:#f5f5f5;margin:5px}@media screen and (max-width:768px){.burger{display:block;z-index:3}.navbar{position:absolute;right:0;height:100%;width:70%;display:none;flex-direction:column;align-items:center;transform:translateX(100%);transition:transform .3s ease-in;overflow:hidden;z-index:2;background:#000;background:linear-gradient(180deg,#000000 20%,rgba(0,0,0,0) 100%);background:-webkit-linear-gradient(180deg,#000000 50%,rgba(0,0,0,0) 100%);background:-moz-linear-gradient(180deg,#000000 50%,rgba(0,0,0,0) 100%)}.nav-link{opacity:0}.navbar-na{margin-top:50vh;align-items:center}.logo{display:none}}.nav-active{transform:translateX(0%);display:block}@keyframes navLinkFade{from{opacity:0;transform:translateX(600px)}to{opacity:1;transform:translateX(0px)}}.main{position:absolute;height:92vh;margin-left:20rem;padding:4rem 0;display:none;visibility:hidden}.content{width:100%;height:100%;display:flex;flex-direction:column;justify-content:center}.angular{font-family:alex brush,cursive;font-size:1.2rem;color:gray}.html{position:absolute;top:2rem}.body{position:absolute;top:4rem;margin-left:1rem;overflow:hidden}.h1{margin-left:1rem}.p{margin-left:1rem}.hello-friend{margin-left:3rem;font-size:5rem}.description{font-size:1.5rem;background:-webkit-linear-gradient(45deg,#853586,#682AE9);-webkit-background-clip:text;-webkit-text-fill-color:transparent;margin-left:3rem}@media screen and (max-width:768px){.main{margin:4rem 1rem}.angular{font-size:1rem}.hello-friend{font-size:3.5rem}.description{font-size:1rem}}@media screen and (max-width:550px){.main{margin:2rem 1rem}.hello-friend{font-size:2rem}.description{font-size:.7rem}}.terminal-container{line-height:1.2rem;min-height:100vh;display:flex;justify-content:center;align-items:center}.wrapper{font-family:roboto mono,monospace;font-size:1rem;position:relative;width:1vw;height:1vw;margin:10vh auto}#background-layer{position:absolute;top:0;left:0;width:100%;height:100%}#background-layer{line-height:1.2rem;box-sizing:border-box;box-shadow:0 6px 20px rgba(0,0,0,.5);background-color:rgba(0,0,0,.5);backdrop-filter:blur(50px)}#typed-paragraph{position:absolute;top:0;left:0;padding:3rem;display:inline-block;height:1vm;overflow:hidden}#target,#im{white-space:pre;display:inline-block}#target,#im,#cursor{color:#fff;line-height:2}#codename{display:inline-block}#cursor{display:inline-block;font-size:1.5em;transform:scale(7,1);visibility:hidden}#cursor{opacity:1;font-weight:800}#rows{position:relative;overflow:hidden}@media only screen and (max-width:768px){.wrapper{font-size:.5rem}#typed-paragraph{padding:1.5rem}}